@model IEnumerable<CountryIndexVM>

<a asp-action="Create" class="btn btn-primary"  asp-controller="Country">Create New Country</a>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.PhoneCode)</th>
            <th></th>


        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
            <tr class="gradeX">
                <td>@Html.DisplayFor(modelItem => country.Name)</td>
                <td>@Html.DisplayFor(modelItem => country.PhoneCode)</td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@country.Id">Delete</a>
                    <a class="btn btn-info" asp-action="Update" asp-route-id="@country.Id">Update</a>
                </td>
            </tr>
        }


</table>





